          "customerId",
          "durationValue",
          "principal",
          "termType"
        ],
        "type": "object",
        "properties": {
          "customerId": {
            "type": "integer",
            "format": "int32"
          },
          "principal": {
            "minimum": 1000,
            "type": "number",
            "format": "double"
          },
          "interestRate": {
            "maximum": 100,
            "minimum": 0,
            "type": "number",
            "format": "double"
          },
          "termType": {
            "minLength": 1,
            "pattern": "Weekly|Monthly",
            "type": "string"
          },
          "durationValue": {
            "maximum": 23,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "CreateUserRequest": {
